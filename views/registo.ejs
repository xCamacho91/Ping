<html>
<head>
    <%- include('./partials/head') %>
    <title>Registo</title>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">

            <!-- Registo Form -->

            <div class="registration-form">
                <form action="/app/registar" method="post" >
                    <div class="form-icon">
                        <img src="/images/ping.JPG" class="img-fluid" alt="PING Mensage" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control item" name="username" id="username" placeholder="Nome de utilizador">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control item" name="password" id="password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control item" name="passwordConfirmation" id="passwordConfirmation" placeholder="Confirmação da Password">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block create-account">Criar conta</button>
                    </div>

                </form>
                <% for(var i=0; i<erros.length; ++i){ %>
                    <div class="alter alert-danger text-center"> <%=  erros[i].texto  %> </div>  <% } %>

                <div class="social-media">

                    <h5>Já tenho conta</h5>
                    <a href="/app/login" class="btn btn-info create-account">  Login </a>
                </div>
            </div>

        </div>
    </div>
</div>
</body>
</html>